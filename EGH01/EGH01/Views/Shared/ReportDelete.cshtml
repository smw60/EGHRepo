@using EGH01.Core;
@using EGH01.Models.EGH;
@model EGH01DB.Primitives.Report
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";


    Menu delete = new Menu(
                          new Menu.MenuItem("Удалить", "Report.Delete.Delete", true),
                          new Menu.MenuItem("Отказаться", "Report.Delete.Cancel", true)
                        );

}


@if (ViewBag.stage.Equals("П"))
{
    using (Html.BeginForm("ReportDelete", "EGHRGE"))
    {
        <div class="box">
        <div class="boxdata">
            <input type="hidden" value="@Model.id.ToString()" name="id">
          <p>@Model.line.ToString()</p>
        </div>
        @Html.Partial("_TypeLineMenu", delete)

    </div>
    }
}
else if (ViewBag.stage.Equals("Р"))
{
    using (Html.BeginForm("ReportDelete", "EGHCEQ"))
    {
        <div class="box">
        <div class="boxdata">
            <input type="hidden" value="@Model.id.ToString()" name="id">
          <p>@Model.line.ToString()</p>
        </div>
        @Html.Partial("_TypeLineMenu", delete)

    </div>
    }
}
else if (ViewBag.stage.Equals("С"))
{
    using (Html.BeginForm("ReportDelete", "EGHGEA"))
    {
        <div class="box">
            <div class="boxdata">
                <input type="hidden" value="@Model.id.ToString()" name="id">
                <p>@Model.line.ToString()</p>
            </div>
            @Html.Partial("_TypeLineMenu", delete)

        </div>
    }
}
else if (ViewBag.stage.Equals("Т"))
{
    using (Html.BeginForm("ReportDelete", "EGHORT"))
    {
        <div class="box">
            <div class="boxdata">
                <input type="hidden" value="@Model.id.ToString()" name="id">
                <p>@Model.line.ToString()</p>
            </div>
            @Html.Partial("_TypeLineMenu", delete)

        </div>
    }
}
