@using EGH01DB.Objects;
@using EGH01DB.Primitives;
@using EGH01.Core;
@using EGH01.Models.EGHCEQ;
@using EGH01;
@model EGH01DB.CEQContext
@{
     Layout = "~/Views/Shared/EGHLayout.cshtml";

    EGH01DB.CEQContext ceq = (EGH01DB.CEQContext)Model;
    CEQViewContext context = (CEQViewContext)Model.GetViewContext("ChoiceForecastResult");
    if (context == null) { Model.SaveViewContext("ChoiceForecastResult", context = new CEQViewContext()); };
    
}
@switch (context.RegimChoice)
{
    case CEQViewContext.REGIM_CHOICE.INIT:
                                  if (context.RegimEvalution == CEQViewContext.REGIM_EVALUTION.CHOICE)
                                  {
                                       @Html.Partial("_ConfirmChoiceForecastResult", @Model)
                                  }
                                  @Html.Partial("_ChoiceForecastResult", @Model)
                                  break;
    case CEQViewContext.REGIM_CHOICE.CHOICE:   @Html.Partial("_ConfirmChoiceForecastResult", @Model)
                                        
                                  break;
    case CEQViewContext.REGIM_CHOICE.CANCEL:
                                  break;
    case CEQViewContext.REGIM_CHOICE.ERROR:    @Html.Partial("_ChoiceForecastResult", @Model)
                                  break;
    case CEQViewContext.REGIM_CHOICE.REPORT:
                                  break;                        
    default: break;                                                                    
} 
    

