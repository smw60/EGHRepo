@using EGH01.Core;
@using EGH01.Models.EGH;

@model EGH01DB.ORTContext

@{
   
    Layout = "~/Views/Shared/EGHLayout.cshtml";

   
        


    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "EmergencyClass.Create", false),
                          new Menu.MenuItem("Excel-формат", "EmergencyClass.Excel", false)
                        );

    Menu create = new Menu(
                          new Menu.MenuItem("Создать", "EmergencyClass.Create.Create", true),
                          new Menu.MenuItem("Отказаться", "EmergencyClass.Create.Cancel", true)
                        );

}

@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHORT", Action = "EmergencyClass", Menu = head })
@using (Html.BeginForm("EmergencyClassCreate", "EGHORT"))
{

    @ViewBag.Error;
    
    <div class="box">
        <div class="boxdata">
            <p>
                <label class="boxdata-label-30">Наименование аварии</label>
                <textarea class="boxdata-input-50" name="name" rows="2"></textarea>
            </p>
            <p>
                <label class="boxdata-label-30">Масса пролитого нефтепродукта от, кг</label>
                <input class="boxdata-input-20" type="number" min="1" name="minmass" value=" " />
            </p>
            <p>
                <label class="boxdata-label-30">Масса пролитого нефтепродукта до, кг</label>
                <input class="boxdata-input-20" type="number" min="1" name="maxmass" value=" " />
            </p>

     </div>

        @Html.Partial("_TypeLineMenu", create)
    </div>
}



