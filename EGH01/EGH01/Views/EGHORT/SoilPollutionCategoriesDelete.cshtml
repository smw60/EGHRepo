@using EGH01.Core;
@using EGH01.Models.EGH;
@model EGH01DB.Types.SoilPollutionCategories
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "SoilPollutionCategories.Create", false),
                          new Menu.MenuItem("Excel-формат", "SoilPollutionCategories.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Удалить", "SoilPollutionCategories.Delete.Delete", true),
                          new Menu.MenuItem("Отказаться", "SoilPollutionCategories.Delete.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHORT", Action = "SoilPollutionCategories", Menu = head })

@using (Html.BeginForm("SoilPollutionCategoriesDelete", "EGHORT"))
{

    <div class="box">
        <div class="boxdata">
            <div class="boxdata">
                <label class="boxdata-label-30">Код типа категории</label>@Model.code.ToString()
                <input type="hidden" value="@Model.code.ToString()" name="code">
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Наименование категории загрязнения грунта</label>@Model.name
            </div>
        </div>

        @Html.Partial("_TypeLineMenu", delete)

    </div>
}