@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;

@model EGH01DB.Types.SoilCleaningMethod
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "SoilCleaningMethod.Create", false),
                          new Menu.MenuItem("Excel-формат", "SoilCleaningMethod.Excel", false)
                        );

    Menu update = new Menu(
                          new Menu.MenuItem("Изменить", "SoilCleaningMethod.Update.Update", true),
                          new Menu.MenuItem("Отказаться", "SoilCleaningMethod.Update.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHORT", Action = "SoilCleaningMethod", Menu = head })
@using (Html.BeginForm("SoilCleaningMethodUpdate", "EGHORT"))
{

    <div class="box">
        <div class="boxdata">
            <p>
                <label class="boxdata-label-30">Код категории</label>
                @Model.type_code.ToString()
                <input type="hidden" value="@Model.type_code" name="type_code">
            </p>
            <p>
                <label class="boxdata-label-30">Наименование категории</label>
                <input class="boxdata-input-20" type="text" name="name" value="@Model.name.ToString()" />
            </p>
            <p>
                <label class="boxdata-label-30">Описание метода</label>
                <input class="boxdata-input-20" type="text" name="method_description" value="@Model.method_description.ToString()" />
            </p>
           
        </div>
        @Html.Partial("_TypeLineMenu", update)

    </div>
}

