@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;

@model EGH01DB.Types.RehabilitationMethod
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "RehabilitationMethods.Create", false),
                          new Menu.MenuItem("Excel-формат", "RehabilitationMethods.Excel", false)
                        );

    Menu update = new Menu(
                          new Menu.MenuItem("Удалить", "RehabilitationMethods.Delete.Delete", true),
                          new Menu.MenuItem("Отказаться", "RehabilitationMethods.Delete.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHORT", Action = "RehabilitationMethods", Menu = head })
@using (Html.BeginForm("RehabilitationMethodsDelete", "EGHORT"))
{

    <div class="box">
        <div class="boxdata">
            <p>
                <label class="boxdata-label-30">Код метода</label>
                @Model.type_code.ToString()
                <input type="hidden" value="@Model.type_code.ToString()" name="type_code">
            </p>
            <p><label class="boxdata-label-30">Тип техногенного объекта</label> @Model.riskobjecttype.name</p>
            <p><label class="boxdata-label-30">Категория земли</label>@Model.cadastretype.name</p>
            <p><label class="boxdata-label-30">Категория разлитого нефтепродукта</label>@Model.petrochemicalcategory.name</p>
            <p><label class="boxdata-label-30">Классификация аварии</label>@Model.emergencyclass.name</p>
            <p><label class="boxdata-label-30">Категория глубины проникновения нефтепродукта</label>@Model.penetrationdepth.name</p>
         
            <p>
                @if (@Model.waterachieved == true)
                {
                <p> <label class="boxdata-label-30">Признак достижение грунтовых вод</label>Да</p>
                }
                else
                {

                    <p><label class="boxdata-label-30">Признак достижение грунтовых вод</label>Нет</p>
                }
            <p><label class="boxdata-label-30">Категория загрязнения грунтов</label>@Model.soilpollutioncategories.name</p>
            <p><label class="boxdata-label-30">Категория загрязнения грунтовых вод </label> @Model.waterpollutioncategories.name</p>
            <p><label class="boxdata-label-30">Категория водоохранной территории  </label> @Model.waterprotectionarea.name</p>
            <p><label class="boxdata-label-30">Категория методов ликвидации загрязнения почвогрунтов</label>@Model.soilcleaningmethod.method_description</p>
            <p><label class="boxdata-label-30">Категория методов ликвидации загрязнения грунтовых вод  </label>@Model.watercleaningmethod.method_description</p>
        </div>

        @Html.Partial("_TypeLineMenu", update)

    </div>
}

