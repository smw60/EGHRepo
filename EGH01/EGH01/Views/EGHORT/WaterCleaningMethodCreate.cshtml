@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;

@model EGH01DB.ORTContext

@{

    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "WaterCleaningMethod.Create", false),
                          new Menu.MenuItem("Excel-формат", "WaterCleaningMethod.Excel", false)
                        );

    Menu create = new Menu(
                          new Menu.MenuItem("Создать", "WaterCleaningMethod.Create.Create", true),
                          new Menu.MenuItem("Отказаться", "WaterCleaningMethod.Create.Cancel", true)
                        );

}

@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHORT", Action = "WaterCleaningMethod", Menu = head })
@using (Html.BeginForm("WaterCleaningMethodCreate", "EGHORT"))
{


    <div class="box">
        <div class="boxdata">
            <p>
                <label class="boxdata-label-30">Наименование метода</label>
                <textarea class="boxdata-input-50" name="name" rows="2"></textarea>
            </p>
            <p>
                <label class="boxdata-label-30">Описание метода</label>
                <textarea class="boxdata-input-50" name="method_description" rows="2"></textarea>
            </p>
     </div>

        @Html.Partial("_TypeLineMenu", create)
    </div>
}



