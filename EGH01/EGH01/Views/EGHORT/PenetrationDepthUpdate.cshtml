@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Objects;
@using EGH01DB.Types;
@model EGH01DB.Types.PenetrationDepth
@{

    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "PenetrationDepth.Create", false),
                          new Menu.MenuItem("Excel-формат", "PenetrationDepth.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Изменить", "PenetrationDepth.Update.Update", true),
                          new Menu.MenuItem("Отказаться", "PenetrationDepth.Update.Cancel", true)
                        );
}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHORT", Action = "PenetrationDepth", Menu = head })

@using (Html.BeginForm("PenetrationDepthUpdate", "EGHORT"))
{

    <div class="box">
        <div class="boxdata">

            <div class="boxdata">
                <input type="hidden" value="@Model.type_code" name="code">
            </div>
            <p>
                <label class="boxdata-label-30">Наименование категории</label>
                <textarea class="boxdata-input-50" name="Name">@Model.name</textarea>
            </p>
            <p>
                <label class="boxdata-label-30">Диапазон глубины проникновения НП от, м<sup><small></small></sup></label>
                <input class="boxdata-input-20" type="number" step="0.1" name="mindepth" value="@Model.mindepth.ToString().Replace(',' , '.')" />
                <input class="boxdata-input-20" type="number" step="0.1" name="maxdepth" value="@Model.maxdepth.ToString().Replace(',' , '.')" />
            </p>
        </div>

        @Html.Partial("_TypeLineMenu", delete)

    </div>
}