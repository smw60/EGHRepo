@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;
@using EGH01.Core;
@using EGH01DB.Types;


@model List<PetrochemicalType>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "PetrochemicalType.Delete", true),
                            new Menu.MenuItem("Изменить", "PetrochemicalType.Update", true)
                           );

}
@foreach (PetrochemicalType t in @Model)
{

    using (Html.BeginForm("PetrochemicalType", "EGHCCO"))
    {

        <div class="box">
            <div class="boxdata">
              
                <p><label class="boxdata-label-30">Код типа нефтепродукта</label>@t.code_type.ToString()</p>
                <input type="hidden" value="@t.code_type.ToString()" name="type_code">
                <p><label class="boxdata-label-30">Наименование нефтепродукта</label>@t.name.ToString()</p>
                <p><label class="boxdata-label-30">Категория нефтепродукта</label>@t.petrochemicalcategories.name.ToString()</p>

                <fieldset  form="PetrochemicalType">
                  
                    <p><label class="boxdata-label-30">Плотность, кг/м<sup><small>3</small></sup></label>@t.density.ToString("0.0")</p>
                    <p><label class="boxdata-label-30">Динамическая вязкость, кг/м*с</label>@t.dynamicviscosity.ToString("0.0000000")</p>
                    <p><label class="boxdata-label-30">Коэф. поверхностного натяжения, кг/с<sup><small>2</small></sup></label>@t.tension.ToString("0.000000000")</p>
                    <p><label class="boxdata-label-30">Коэф. диффузии, м<sup><small>2</small></sup>/с</label>@t.diffusion.ToString("0.000000000")</p>
                  
                </fieldset>
               
                <p><label class="boxdata-label-30">Температура кипения, <sup><small>о</small></sup>С</label>@t.boilingtemp.ToString()</p>
                <p><label class="boxdata-label-30">Кинематическая вязкость, м<sup><small>2</small></sup>/с</label>@t.viscosity.ToString("0.000000000")</p>
                <p><label class="boxdata-label-30">Растворимость, кг/м<sup><small>3</small></sup></label>@t.solubility.ToString("0.000000")</p>
            
            </div>
            @Html.Partial("_TypeLineMenu", menu)
        </div>

    }
}



