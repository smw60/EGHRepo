@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;
@using EGH01.Core;
@using EGH01DB.Types;


@model List<PetrochemicalType>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "PetrochemicalType.Delete", true),
                            new Menu.MenuItem("Изменить", "PetrochemicalType.Update", true)
                           );

}
@foreach (PetrochemicalType t in @Model)
{

    using (Html.BeginForm("PetrochemicalType", "EGHCCO"))
    {

        <div class="box">
            <div class="boxdata">

                <p><label class="boxdata-label-30">Код типа нефтепродукта</label> @t.code_type.ToString() </p><br />
                
                <p><label class="boxdata-label-30">Наименование нефтепродукта</label> @t.name </p><br />
                
                <p><label class="boxdata-label-30">Температура кипения, <sup><small>о</small></sup>С</label> @t.boilingtemp.ToString()</p><br />
                
                <p><label class="boxdata-label-30">Плотность, г/см<sup><small>3</small></sup></label> @t.density.ToString()</p><br />
                
                <p><label class="boxdata-label-30">Кинематическая вязкость, мм<sup><small>2</small></sup>/см</label> @t.viscosity.ToString()</p><br />
                
                <p><label class="boxdata-label-30">Растворимость, млг/дм<sup><small>2</small></sup></label> @t.solubility.ToString()</p>
      
                <input type="hidden" value="@t.code_type.ToString()" name="type_code">

            </div>
            @Html.Partial("_TypeLineMenu", menu)
        </div>

    }
}



