@using EGH01.Core;
@using EGH01.Models.EGH;
@model EGH01DB.Types.PetrochemicalType
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "PetrochemicalType.Create", false),
                          new Menu.MenuItem("Excel-формат", "PetrochemicalType.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Изменить", "PetrochemicalType.Update.Update", true),
                          new Menu.MenuItem("Отказаться", "PetrochemicalType.Update.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHCCO", Action = "PetrochemicalType", Menu = head })

@using (Html.BeginForm("PetrochemicalTypeUpdate", "EGHCCO"))
{

    <div class="box">
        <div class="boxdata">
            <div class="boxdata">
                <label class="boxdata-label-30">Код типа нефтепродукта</label>
                @Model.code_type
                <input type="hidden" value="@Model.code_type.ToString()" name="code_type">
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Наименование нефтепродукта</label>
                <input class="boxdata-input-50" type="text" name="Name" value="@Model.name.ToString()" />
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Температура кипения, <sup><small>о</small></sup>С </label>
                <input class="boxdata-input-50" type="text" name="Boilingtemp" value="@Model.boilingtemp.ToString()" />
                @*@Html.EditorFor(model => model.boilingtemp)*@
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Плотность, г/см<sup><small>3</small></sup></label>
                <input class="boxdata-input-50" type="number" step="0.1" name="Density" value="@Model.density.ToString()" />
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Кинематическая вязкость, мм<sup><small>2</small></sup>/см</label>
                <input class="boxdata-input-50" type="number" step="0.1" name="Viscosity" value="@Model.viscosity.ToString()" />
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Растворимость, млг/дм<sup><small>2</small></sup></label>
                <input class="boxdata-input-50" type="number" step="0.1" name="Solubility" value="@Model.solubility.ToString()" />
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Динамическая вязкость, кг/м*с</label>
                <input class="boxdata-input-50" type="number" step="0.1" name="Dynamicviscosity" value="@Model.dynamicviscosity.ToString()" />
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Коэф. поверхностного натяжения, кг/с<sup><small>2</small></sup></label>
                <input class="boxdata-input-50" type="number" step="0.1" name="Tension" value="@Model.tension.ToString()" />
            </div>
            <div class="boxdata">
                <label class="boxdata-label-30">Коэф. диффузии, м<sup><small>2</small></sup>/с</label>
                <input class="boxdata-input-50" type="number" step="0.1" name="Diffusion" value="@Model.diffusion.ToString()" />
            </div>
        </div>
        @Html.Partial("_TypeLineMenu", delete)

    </div>
}