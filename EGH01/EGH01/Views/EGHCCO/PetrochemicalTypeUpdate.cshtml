@using EGH01.Core;
@using EGH01.Models.EGH;
@model EGH01DB.Types.PetrochemicalType
<h2>PetrochemicalTypeUpdate</h2>
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "PetrochemicalType.Create", false),
                          new Menu.MenuItem("Excel-формат", "PetrochemicalType.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Изменить", "PetrochemicalType.Update.Update", true),
                          new Menu.MenuItem("Отказаться", "PetrochemicalType.Update.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHCCO", Action = "PetrochemicalType", Menu = head })

@using (Html.BeginForm("PetrochemicalTypeUpdate", "EGHCCO"))
{

    <div class="box">
        <div class="boxdata">

            <p><label class="boxdata-label-30">Код типа нефтепродукта</label>@Model.code_type.ToString()</p>
            <p>
                <label class="boxdata-label-30">Наименование нефтепродукта</label>
                <input class="boxdata-input-50" type="text" name="Name" value="@Model.name" />
            </p>
            <p>
                <label class="boxdata-label-30">Температура кипения, С </label>
                <input class="boxdata-input-50" type="number" name="Boilingtemp" value="@Model.boilingtemp" />
            </p>
            <p>
                <label class="boxdata-label-30">Плотность, г/см3</label>
                <input class="boxdata-input-50" type="number" name="Density" value="@Model.density" />
            </p>
            <p>
                <label class="boxdata-label-30">Кинематическая вязкость, мм2/см</label>
                <input class="boxdata-input-50" type="number" name="Viscosity" value="@Model.viscosity" />
            </p>
            <p>
                <label class="boxdata-label-30">Растворимость, млг/дм2</label>
                <input class="boxdata-input-50" type="number" name="Solubility" value="@Model.solubility" />
            </p>
            <input type="hidden" value="@Model.code_type.ToString()" name="type_code">

        </div>

        @Html.Partial("_TypeLineMenu", delete)

    </div>
}