@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Objects;
@using EGH01DB.Types;
@model EGH01DB.Types.CadastreType
@{

    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "CadastreType.Create", false),
                          new Menu.MenuItem("Excel-формат", "CadastreType.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Изменить", "CadastreType.Update.Update", true),
                          new Menu.MenuItem("Отказаться", "CadastreType.Update.Cancel", true)
                        );
}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHGEA", Action = "CadastreType", Menu = head })

@using (Html.BeginForm("CadastreTypeUpdate", "EGHGEA"))
{

    <div class="box">
        <div class="boxdata">

            <div class="boxdata">
                <input type="hidden" value="@Model.type_code" name="type_code">
            </div>
                <p>
                    <label class="boxdata-label-30" value="@Model.name">Наименование категории земли</label>@Model.name</p>
            <p>
                <label class="boxdata-label-30">ПДК в грунте (мг/кг)</label>
                <input class="boxdata-input-50" type="number" name="pdk_coef" value="@Model.pdk_coef.ToString()" />           
            </p>
        </div>

        @Html.Partial("_TypeLineMenu", delete)

    </div>
}