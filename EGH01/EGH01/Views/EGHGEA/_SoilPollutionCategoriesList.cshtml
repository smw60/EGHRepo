@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;
@using EGH01DB.Objects;
@model List<SoilPollutionCategories>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "SoilPollutionCategories.Delete", true),
                            new Menu.MenuItem("Изменить", "SoilPollutionCategories.Update", true)
                           );


}
@foreach (SoilPollutionCategories t in @Model)
{

    using (Html.BeginForm("SoilPollutionCategories", "EGHGEA"))
    {
     
        <div class="box">
            <div class="boxdata">

                <p><label class="boxdata-label-30">Код типа категории</label> @t.code.ToString()</p>
                <p><label class="boxdata-label-30">Наименование категории загрязнения грунта</label> <span class="boxdata-span">@t.name</span></p>            
                <p><label class="boxdata-label-30">Диапазон кратности превышения показателя ПДК </label>@t.min.ToString()&nbsp;-&nbsp;@t.max.ToString()&nbsp;</p>
                <p><label class="boxdata-label-30">Категория земли </label> <span class="boxdata-span">@t.cadastretype.name</span></p>   

                <input type="hidden" value="@t.code.ToString()" name="id">

            </div>
       @Html.Partial("_TypeLineMenu", menu)
        </div>
    }
}
