@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;
@using EGH01DB.Objects;
@model List<WaterPollutionCategories>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "WaterPollutionCategories.Delete", true),
                            new Menu.MenuItem("Изменить", "WaterPollutionCategories.Update", true)
                           );


}
@foreach (WaterPollutionCategories t in @Model)
{

    using (Html.BeginForm("WaterPollutionCategories", "EGHGEA"))
    {

        <div class="box">
            <div class="boxdata">

                <p><label class="boxdata-label-30">Код типа категории</label> @t.code.ToString()</p>
                <p><label class="boxdata-label-30">Наименование категории загрязнения  грунтовых вод</label> <span class="boxdata-span">@t.name</span></p>
                <p><label class="boxdata-label-30">Диапазон кратности превышения показателя ПДК от</label>@t.min.ToString()&nbsp;-&nbsp;@t.max.ToString()&nbsp;</p>
                <p><label class="boxdata-label-30">Категория земли</label> @t.cadastretype.name</p>

                <input type="hidden" value="@t.code.ToString()" name="id">

            </div>
            @Html.Partial("_TypeLineMenu", menu)
        </div>
    }
}
