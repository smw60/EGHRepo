@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Objects;
@using EGH01DB.Types;
@model EGH01DB.Types.CadastreType
@{

    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "CadastreType.Create", false),
                          new Menu.MenuItem("Excel-формат", "CadastreType.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Изменить", "CadastreType.Update.Update", true),
                          new Menu.MenuItem("Отказаться", "CadastreType.Update.Cancel", true)
                        );
}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHRGE", Action = "CadastreType", Menu = head })

@using (Html.BeginForm("CadastreTypeUpdate", "EGHRGE"))
{

    <div class="box">
        <div class="boxdata">

            <div class="boxdata">
                <input type="hidden" value="@Model.type_code" name="type_code">
                <input type="hidden" value="@Model.pdk_coef" name="pdk_coef" min="0.0000000000000001">
                <input type="hidden" value="@Model.water_pdk_coef" name="water_pdk_coef">
                <input type="hidden" value="@Model.ground_doc_name" name="ground_doc_name">
                <input type="hidden" value="@Model.water_doc_name" name="water_doc_name"></div>
                <p>
                    <label class="boxdata-label-30">Наименование категории земли</label>
                    <textarea class="boxdata-input-50" name="Name">@Model.name</textarea>          
                </p>

        </div>

        @Html.Partial("_TypeLineMenu", delete)

    </div>
}