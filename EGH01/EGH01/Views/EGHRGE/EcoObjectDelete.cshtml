@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Types;
@using EGH01.Core;
@using EGH01DB.Objects;


@model EGH01DB.Objects.EcoObject
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "EcoObject.Create", false),
                          new Menu.MenuItem("Excel-формат", "EcoObject.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Удалить", "EcoObject.Delete.Delete", true),
                          new Menu.MenuItem("Отказаться", "EcoObject.Delete.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHRGE", Action = "EcoObject", Menu = head })
@using (Html.BeginForm("EcoObjectDelete", "EGHRGE"))
{
    <div class="box">
        <div class="boxdata">
            <p>
                <label class="boxdata-label-30">Код природоохранного объекта</label>@Model.id.ToString()
            </p>
            <p>
                <label class="boxdata-label-30">Наименование природоохранного объекта</label>@Model.name.ToString()
            </p>
                <input type="hidden" value="@Model.id" name="type_code">

        </div>
    

        @Html.Partial("_TypeLineMenu", delete)
    </div>
}

