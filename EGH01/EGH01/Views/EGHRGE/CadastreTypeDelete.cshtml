@using EGH01.Core; 
@using EGH01.Models.EGH;
@model EGH01DB.Types.CadastreType
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "CadastreType.Create", false),
                          new Menu.MenuItem("Excel-формат", "CadastreType.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Удалить", "CadastreType.Delete.Delete", true),
                          new Menu.MenuItem("Отказаться", "CadastreType.Delete.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHRGE", Action = "CadastreType", Menu = head})

 @using(Html.BeginForm("CadastreTypeDelete", "EGHRGE"))
 {

   <div class="box">
            <div class="boxdata">

                <p><label class="boxdata-label-30">Идентификатор</label>@Model.type_code.ToString()</p>
                
                    <p><label class="boxdata-label-50">Наименование категории земли:</label>@Model.name</p>
                <input type="hidden" value="@Model.type_code.ToString()" name="id">
            </div>
            
            @Html.Partial("_TypeLineMenu",delete)
            
        </div>
  }