@using EGH01.Core;
@using EGH01.Models.EGH;
@model EGH01DB.Types.RiskObjectType
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "RiskObjectType.Create", false),
                          new Menu.MenuItem("Excel-формат", "RiskObjectType.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Удалить", "RiskObjectType.Delete.Delete", true),
                          new Menu.MenuItem("Отказаться", "RiskObjectType.Delete.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHRGE", Action = "RiskObjectType", Menu = head })

@using (Html.BeginForm("RiskObjectTypeDelete", "EGHRGE"))
{

    <div class="box">
        <div class="boxdata">

            <p><label class="boxdata-label-30">Код типа техногенного объекта</label>@Model.type_code.ToString()</p>
            <p><label class="boxdata-label-30">Наименование типа техногенного объекта</label>@Model.name</p>
            <input type="hidden" value="@Model.type_code.ToString()" name="type_code">
        </div>

        @Html.Partial("_TypeLineMenu", delete)

    </div>
}