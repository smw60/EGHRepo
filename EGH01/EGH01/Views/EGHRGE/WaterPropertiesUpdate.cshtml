@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;

@model EGH01DB.Primitives.WaterProperties
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
    Menu head = new Menu(
                          new Menu.MenuItem("Создать", "WaterProperties.Create", false),
                          new Menu.MenuItem("Excel-формат", "WaterProperties.Excel", false)
                        );

    Menu delete = new Menu(
                          new Menu.MenuItem("Изменить", "WaterProperties.Update.Update", true),
                          new Menu.MenuItem("Отказаться", "WaterProperties.Update.Cancel", true)
                        );

}
@Html.Partial("_TypeHeadMenu", new TypeViewMenu { Controller = "EGHRGE", Action = "WaterProperties", Menu = head })
@using (Html.BeginForm("WaterPropertiesUpdate", "EGHRGE"))
{

    <div class="box">
        <div class="boxdata">
            <p>
                <label class="boxdata-label-30">Код показателя воды</label>
                @Model.water_code.ToString()
                <input type="hidden" value="@Model.water_code.ToString()" name="water_code">
            </p>
            <p>
                <label class="boxdata-label-30">Температура, <sup><small>о</small></sup>С</label>
                <input class="boxdata-input-20" type="number" name="temperature" step="0.1" value="@Model.temperature.ToString("0.0").Replace(',', '.')" />
            </p>
            <p>
                <label class="boxdata-label-30">Вязкость, кг/м*с</label>
                <input class="boxdata-input-20" type="number" name="viscocity" step="0.000001" value="@Model.viscocity.ToString("0.000000").Replace(',', '.')" />
            </p>
            <p>
                <label class="boxdata-label-30">Плотность, кг/м<sup><small>3</small></sup></label>
                <input class="boxdata-input-20" type="number" name="density" step="0.001" value="@Model.density.ToString("0.00").Replace(',', '.')" />
            </p>
            <p>
                <label class="boxdata-label-30">Коэффициент поверхностного натяжения, кг/с<sup><small>2</small></sup></label>
                <input class="boxdata-input-20" type="number" name="tension" step="0.1" value="@Model.tension.ToString("0.000").Replace(',', '.')" />
            </p>
            
        </div>
        @Html.Partial("_TypeLineMenu", delete)

    </div>
}